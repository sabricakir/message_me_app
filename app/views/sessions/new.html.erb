<h2 class="ui header centered">Chatroom Uygulamasına Hoşgeldiniz!</h2>

<h4 class="ui center aligned medium icon header">
  <i class="circular green power off icon"></i>
  Giriş Yap
</h4>

<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
    <%= form_for(:session, html:{class:"ui form", role:"form"}, url:login_path) do |f|%>

        <div class="field">
          <%= f.label :username, "Username"%>
          <div class="ui left icon input">
            <%=f.text_field :username, placeholder:"Username"%>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :password, "Şifre"%>
          <div class="ui left icon input">
            <%=f.password_field :password, placeholder:"Şifreniz"%>
            <i class="lock icon"></i>
          </div>
        </div>
        <%=f.submit "Giriş Yap", class:"ui green submit button"%>

    <%end%>
    </div>
    <div class="middle aligned column">

        
        <%= link_to signup_path, class:"ui big button" do%>
          <i class="signup green icon"></i>
          Kayıt Ol
        <%end%>
    </div>
  </div>
  <div class="ui vertical divider">
    Veya
  </div>
</div>